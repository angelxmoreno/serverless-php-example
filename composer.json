{
  "name": "angelxmoreno/serverless-php",
  "authors": [
    {
      "name": "Angel S. Moreno",
      "email": "angelxmoreno@gmail.com"
    }
  ],
  "type": "project",
  "license": "MIT",
  "require": {
    "mnapoli/bref": "~0.2.22",
    "slim/slim": "^3.10"
  },
  "require-dev": {
    "kahlan/kahlan": "^4.1"
  },
  "autoload": {
    "psr-4": {
      "FaaSPHP\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "FaaSPHP\\Test\\Unit": "spec/Unit/"
    }
  },
  "config": {
    "sort-packages": true,
    "bin-dir": "bin"
  },
  "scripts" : {
    "server": "php -S 127.0.0.1:8000 bref.php",
    "deploy": " ./bin/bref deploy",
    "info": " ./bin/bref info"
  }
}
